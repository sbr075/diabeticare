<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="Diabeticare.Views.CarbEntryPage"
    Shell.PresentationMode="Modal">
    
    <StackLayout Padding="10">
        <Frame BorderColor="LightSkyBlue">
            <StackLayout>
                <Label Text="Change carbohydrate entry" HorizontalOptions="Center"/>
                <Entry
                    x:Name="entryCarb"
                    Text=""
                    MaxLength="5" 
                    Keyboard="Numeric"
                    HorizontalTextAlignment="Center">
                </Entry>
                
                <Entry
                    x:Name="entryFood"
                    Text=""
                    MaxLength="20" 
                    Keyboard="Numeric"
                    HorizontalTextAlignment="Center">
                </Entry>

                <Label Text="Change time" HorizontalOptions="Center"/>
                <TimePicker x:Name="timeSelector" Format="HH:mm" HorizontalOptions="Center" FontSize="Medium"/>

                <Label Text="Change date" HorizontalOptions="Center"/>
                <DatePicker x:Name="dateSelector" HorizontalOptions="Center"/>

                <Button Text="Cancel" Clicked="CancelUpdate"/>
                <Button Text="Save" Clicked="SaveUpdatedCarbEntry"/>
            </StackLayout>
        </Frame>
    </StackLayout>
    
</ContentPage>