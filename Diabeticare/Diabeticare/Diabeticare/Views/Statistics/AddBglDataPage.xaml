<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Diabeticare.Views.AddBglDataPage">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <Label 
                VerticalOptions="Start" 
                Text="Add new BGL data" 
                HorizontalOptions="Center" 
                FontSize="Large"/>

            <Entry 
                x:Name="dataField"
                Text=""
                MaxLength="4" 
                Placeholder="BGL measurement" 
                Keyboard="Numeric"
                VerticalOptions="CenterAndExpand"  
                HorizontalTextAlignment="Center"
                TextChanged="Bgl_Entry_Changed"/>

            <Label 
                Text="NB: Målinger registreres i måleenheten.." 
                HorizontalOptions="Center" 
                FontSize="Micro"/>

            <Button
                x:Name="addData" 
                Text="Legg til måling" 
                VerticalOptions="End"
                IsEnabled="False"
                BackgroundColor="{StaticResource Primary}"
                Clicked="SaveBglData"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>